@model StorageServiceLibrary.Dto.ProizvodDTO

<h4>@ViewBag.Naslov</h4>
<br />

<form asp-action="AddOrEdit">
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @if (@ViewBag.IsEdit)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="form-group">
        <label asp-for="Naziv" class="control-label"></label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Opis" class="control-label"></label>
        <textarea asp-for="Opis" class="form-control" rows="6" cols="15" ></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Kategorija" class="control-label"></label>
        <select asp-for="Id_kategorija" asp-items="@ViewBag.KategorijeDDL" class="form-control">
            <option>Odaberite proizvodjaca</option>
        </select>
        <span asp-validation-for="Id_kategorija" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Proizvodjac" class="control-label"></label>
        <select asp-for="Id_Proizvodjac" asp-items="@ViewBag.ProizvodjaciDDL" class="form-control">
            <option>Odaberite proizvodjaca</option>
        </select>
        <span asp-validation-for="Id_Proizvodjac" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Dobavljac" class="control-label"></label>
        <select asp-for="Id_Dobavljac" asp-items="@ViewBag.DobavljaciDDL" class="form-control">
            <option>Odaberite dobavljaca</option>
        </select>
        <span asp-validation-for="Id_Dobavljac" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cena" class="control-label"></label>
        <input asp-for="Cena" class="form-control" />
        <span asp-validation-for="Cena" class="text-danger"></span>
    </div>





    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Snimi" />
        <a class="btn btn-danger" asp-action="Index">Nazad</a>
    </div>

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}